		<result column="audit_reason" property="reasonText" jdbcType="VARCHAR"/>
		<result column="audit_date" property="auditDate" jdbcType="VARCHAR"/>
		<result column="member_nickname" property="memberNickName" jdbcType="VARCHAR" />
